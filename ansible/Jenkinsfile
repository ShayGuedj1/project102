pipeline {
    agent any

    stages {
        
        stage('install-services') {
            steps {
                // Run Terraform to provision AWS instance
                sh 'sudo chmod 777 /home/ubuntu/.ssh' 
                sh 'ls ansible'
                sh 'sleep 5'
                sh 'ansible-playbook -i /home/ubuntu/inventory ansible/install-services.yaml --ssh-common-args=\'-o StrictHostKeyChecking=no\''
                sh 'ansible-playbook -i /home/ubuntu/inventory ansible/install-website.yaml --ssh-common-args=\'-o StrictHostKeyChecking=no\''
            }
        }

        stage('wrapping this up!!') {
            steps {
                // Run Terraform to provision AWS instance
                sh 'sudo chmod -R 700 /home/ubuntu/.ssh'
                sh 'sleep 5'
                sh 'sudo rm /home/ubuntu/ips.json'
                sh 'sudo rm /home/ubuntu/inventory'
            }
        }
    }
}