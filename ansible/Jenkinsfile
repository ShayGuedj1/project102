pipeline {
    agent any

    stages {
        
        stage('Terraform Apply') {
            steps {
                // Run Terraform to provision AWS instance
                sh 'sudo chmod -R 777 /home/ubuntu/.ssh' 
                sh 'ls ansible'
                sh 'sleep 5'
                sh 'ansible-playbook -i /home/ubuntu/inventory ansible/install-services.yaml'
                sh 'ansible-playbook -i /home/ubuntu/inventory ansible/install-website.yaml'
            }
        }

        stage('copy ip') {
            steps {
                // Run Terraform to provision AWS instance
                sh 'sudo chmod -R 600 /home/ubuntu/.ssh'
            }
        }
    }
}