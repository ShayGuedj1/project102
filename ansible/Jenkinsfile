pipeline {
    agent any

    environment {
        // Define environment variables if needed
        ANSIBLE_PLAYBOOK = 'ansible/install-services.yaml'
        PRIVATE_KEY_PATH = '/home/ubuntu/.ssh/id_rsa'
        IPS_FILE_PATH = '/home/ubuntu/inventory'

    }

    stages {

        stage('giving permission') {
            steps {
                sh 'sudo chown jenkins:jenkins ~/home/ubuntu/.ssh'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                    
                    

                    // Execute Ansible playbook
                ansiblePlaybook(
                    playbook: "${ANSIBLE_PLAYBOOK}",
                    inventory: "${IPS_FILE_PATH},",
                    extras: "${PRIVATE_KEY_PATH}"
                    )
                }
            }
        }
    }

    post {
        always {
            // Print 'done' at the end
            sh 'sudo chown ubuntu:ubuntu /home/ubuntu/.ssh'
            echo 'Done'

        }
    }
